<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <h3 class="modal-title pumukitnewadmin-modal-title-margin" id="myModalLabel">{% trans %}Multimedia object expiration date{% endtrans %}</h3>
</div>
<div class="modal-body">
    <fieldset>
      <div class="form-group">
        {% set expiration_date = multimediaObject.properties.expiration_date|date("d/m/Y") %}
        {% trans with {'%date%': expiration_date} %}The expiration date for this video is %date%{%endtrans%}
        {% if can_edit|default(false) %}
        <form style="padding: 22px">

          <div class="form-group" style="width: 250px">
            <label class="control-label required">{% trans %}Update{% endtrans %}</label>
            <input type="date" class="form-control" pattern="(\d\d\d\d)-(\d\d)-(\d\d)" title="Format YYYY-MM-DD" name="date" id="expiration_date_from" value="{{ multimediaObject.properties.expiration_date|date('Y-m-d') }}">
            <a href="#" onclick="$('.modal-content').load('{{ path('pumukit_expired_video_update_date', {id: multimediaObject.id}) }}', {'date': $('#expiration_date_from').val()}, function(){$('#myModal').modal('hide')}); return false" class="btn btn-pumukit btn-raised btn-xs">{% trans %}Save{% endtrans %}</a>
          </div>
        </div>
        {% endif %}
      </div>
    </fieldset>
    <div class="modal-footer">
      <button type="button" class="btn btn-default btn-raised" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
    </div>
</div>
