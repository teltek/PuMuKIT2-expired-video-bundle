<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="pumukit_expired_video.notification" class="Pumukit\ExpiredVideoBundle\Services\ExpiredVideoService">
            <argument type="service" id="doctrine_mongodb.odm.document_manager"/>
            <argument type="service" id="router"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="pumukit_notification.sender" on-invalid="ignore"/>
            <argument type="service" id="translator"/>
            <argument type="expression">container.hasParameter('pumukit_expired_video.notification_subject') ? parameter('pumukit_expired_video.notification_subject') : null</argument>

        </service>

        <service id="pumukit_expired_video.init_date" class="Pumukit\ExpiredVideoBundle\EventListener\InitDateListener">
            <argument type="service" id="doctrine_mongodb.odm.document_manager"/>
            <argument>%pumukit_expired_video.expiration_date_days%</argument>
            <tag name="kernel.event_listener" event="multimediaobject.create" method="onMultimediaobjectCreate" />
            <tag name="kernel.event_listener" event="multimediaobject.clone" method="onMultimediaobjectClone" />
        </service>

        <service id="pumukit_expired_video.menu" class="Pumukit\ExpiredVideoBundle\Services\MenuService">
            <tag name="pumukitnewadmin.menuitem"></tag>
        </service>

        <service id="pumukit_expired_video.mmobj_menu" class="Pumukit\ExpiredVideoBundle\Services\MultimediaObjectMenuService">
            <tag name="pumukitnewadmin.mmobjmenuitem"></tag>
        </service>
    </services>
</container>
